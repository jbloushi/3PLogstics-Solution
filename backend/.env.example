# ============================================
# Server Configuration
# ============================================
PORT=5000
NODE_ENV=production

# ============================================
# Database Configuration
# ============================================
# MongoDB Connection String
# Format: mongodb://username:password@host:port/database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=mongodb://localhost:27017/cargo-tracker

# ============================================
# Security & Authentication
# ============================================
# JWT Secret Key - MUST be at least 32 characters for production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# JWT Token Expiration (e.g., 7d, 24h, 60m)
JWT_EXPIRES_IN=7d

# CORS Origins - Comma-separated list of allowed origins
# For production: https://yourdomain.com,https://www.yourdomain.com
# For development: http://localhost:3000
CORS_ORIGIN=*

# ============================================
# DHL Express API Configuration
# ============================================
# DHL API Credentials (REQUIRED for shipment creation)
# Get credentials from: https://developer.dhl.com/
DHL_API_KEY=your-dhl-api-key-here
DHL_API_SECRET=your-dhl-api-secret-here

# DHL Account Number for shipments
DHL_ACCOUNT_NUMBER=451012315

# ============================================
# Google Maps API Configuration
# ============================================
# Google Maps API Key (REQUIRED for geocoding and address validation)
# Get API key from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# ============================================
# Logging Configuration
# ============================================
# Log Level: error, warn, info, http, debug
LOG_LEVEL=info

# Enable file logging (set to 'false' for cloud deployments)
# When false, logs only output to stdout for cloud log aggregation
LOG_TO_FILE=false

# ============================================
# Optional: Error Tracking
# ============================================
# Sentry DSN for error tracking (optional)
# Get DSN from: https://sentry.io/
SENTRY_DSN=

# ============================================
# Optional: Rate Limiting
# ============================================
# Maximum requests per 15 minutes per IP
RATE_LIMIT_MAX=100

# ============================================
# Optional: File Upload Configuration
# ============================================
# Maximum file upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760
