# ========================================
# Docker Environment Variables Template
# ========================================
# Copy this file to .env in the root directory
# Update all values before running docker-compose

# ========================================
# General Configuration
# ========================================
NODE_ENV=production
COMPOSE_PROJECT_NAME=target-logistics

# ========================================
# MongoDB Configuration
# ========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme-use-strong-password-here
MONGO_DATABASE=cargo-tracker
MONGO_PORT=27017

# ========================================
# Backend API Configuration
# ========================================
BACKEND_PORT=8899
PORT=5000

# ========================================
# Security & Authentication
# ========================================
# CRITICAL: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-min-32-chars-required

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# CORS Origins (comma-separated for production)
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=*

# ========================================
# DHL Express API
# ========================================
DHL_API_KEY=your-dhl-api-key-here
DHL_API_SECRET=your-dhl-api-secret-here
DHL_ACCOUNT_NUMBER=451012315

# ========================================
# Google Maps API
# ========================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info
LOG_TO_FILE=false

# ========================================
# Optional: Error Tracking
# ========================================
SENTRY_DSN=

# ========================================
# Optional: Rate Limiting
# ========================================
RATE_LIMIT_MAX=100

# ========================================
# Frontend Configuration (if using Docker frontend)
# ========================================
FRONTEND_PORT=8833
REACT_APP_API_URL=http://localhost:8899/api
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
REACT_APP_MAPBOX_TOKEN=your-mapbox-token-here
