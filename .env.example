# ========================================
# Docker Compose Environment Variables
# ========================================
# This file is read by docker-compose.yml
# Copy this to .env and fill in actual values

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_DATABASE=cargo-tracker
MONGO_PORT=27017

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=8899
JWT_SECRET=your_jwt_secret_minimum_32_characters_long_here
JWT_EXPIRES_IN=7d
CORS_ORIGIN=*

# API Keys
DHL_API_KEY=your_dhl_api_key
DHL_API_SECRET=your_dhl_api_secret
DHL_ACCOUNT_NUMBER=your_dhl_account_number
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Frontend Configuration (for Docker Compose frontend service)
REACT_APP_API_URL=/api
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_MAPBOX_TOKEN=your_mapbox_token
FRONTEND_PORT=8833

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false

# Optional
SENTRY_DSN=
RATE_LIMIT_MAX=100
